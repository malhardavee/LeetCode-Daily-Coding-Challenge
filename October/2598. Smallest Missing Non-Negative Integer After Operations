class Solution {
    public int findSmallestInteger(int[] nums, int value) {
        int[] freq = new int[value];
        for (int num : nums) {
            int mod = ((num % value) + value) % value;
            freq[mod]++;
        }
        int min = Integer.MAX_VALUE, idx = -1;
        for (int i = 0; i < value; i++) {
            if (freq[i] < min) {
                min = freq[i];
                idx = i;
            }
        }
        return min * value + idx;
    }
}
