class Solution {
    public int totalMoney(int n) {
        int sum = 0;
        if (n <= 7) {
            for (int i = 1; i <= n; i++) {
                sum += i;
            }
        } else {
            int numofcalculations;
            if (n % 7 == 0)
                numofcalculations = n / 7;
            else
                numofcalculations = n / 7 + 1;

            int remaining = n;
            int start = 1;

            for (int i = 0; i < numofcalculations; i++) {
                for (int j = 0; j < 7 && remaining > 0; j++) {
                    sum += start + j;
                    remaining--;
                }
                start++;
            }
        }
        return sum;
    }
}
