class Solution {
    public int maxIncreasingSubarrays(List<Integer> nums) {
        int n = nums.size(), ans = 0, cur = 1, prev = 0;
        for (int i = 1; i < n; i++) {
            if (nums.get(i) > nums.get(i - 1)) cur++;
            else {
                prev = cur;
                cur = 1;
            }
            ans = Math.max(ans, Math.min(prev, cur));
            ans = Math.max(ans, cur / 2);
        }
        return ans;
    }
}
