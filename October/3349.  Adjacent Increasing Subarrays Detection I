class Solution {
    public boolean hasIncreasingSubarrays(List<Integer> nums, int k) {
        int n = nums.size();
        if (2 * k > n) return false;
        int[] len = new int[n];
        len[0] = 1;
        for (int i = 1; i < n; i++)
            len[i] = nums.get(i) > nums.get(i - 1) ? len[i - 1] + 1 : 1;
        for (int i = 0; i + 2 * k - 1 < n; i++)
            if (len[i + k - 1] >= k && len[i + 2 * k - 1] >= k)
                return true;
        return false;
    }
}
