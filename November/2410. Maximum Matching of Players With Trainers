class Solution {
    public int matchPlayersAndTrainers(int[] players, int[] trainers) {
        int count = 0, p = players.length, t = trainers.length;
        int i = 0, j = 0;

        Arrays.sort(players);
        Arrays.sort(trainers);
        
        while(i < p && j < t) {
            if(players[i] <= trainers[j]){
                count++;
                i++; j++;
            }
            else j++;
        }
        return count;
    }
}
