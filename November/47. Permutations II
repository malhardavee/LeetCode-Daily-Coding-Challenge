class Solution {
    public List<List<Integer>> permuteUnique(int[] nums) {
        Arrays.sort(nums); // important for skipping duplicates
        List<List<Integer>> ans = new ArrayList<>();
        List<Integer> ds = new ArrayList<>();
        boolean[] flag = new boolean[nums.length];
        permute(nums, ans, ds, flag, 0);
        return ans;
    }

    private void permute(int[] nums, List<List<Integer>> ans, List<Integer> ds, boolean[] flag, int idx) {
        // BASE CASE: permutation formed
        if (ds.size() == nums.length) {
            ans.add(new ArrayList<>(ds));
            return;
        }

        for (int i = 0; i < nums.length; i++) {
            // If already used in current permutation
            if (flag[i]) continue;

            // Skip duplicates: same number, previous one not used â†’ same level duplicate
            if (i > 0 && nums[i] == nums[i - 1] && !flag[i - 1]) continue;

            flag[i] = true;
            ds.add(nums[i]);

            permute(nums, ans, ds, flag, idx + 1);

            // BACKTRACK
            flag[i] = false;
            ds.remove(ds.size() - 1);
        }
    }
}
