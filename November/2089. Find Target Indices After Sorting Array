class Solution {
    public List<Integer> targetIndices(int[] nums, int target) {
        Arrays.sort(nums);
        
        List<Integer> ans = new ArrayList<>();
        int startIndex = -1;
        int l = 0;
        int h = nums.length - 1; 
        
        while(l <= h) {
            int m = l + (h - l) / 2;
            if (nums[m] < target) {
                l = m + 1;
            } else if (nums[m] > target) {
                h = m - 1;
            } else {
                startIndex = m;
                h = m - 1; 
            }
        }
        if (startIndex != -1) {
            for (int i = startIndex; i < nums.length; i++) {
                if (nums[i] == target) {
                    ans.add(i);
                } else {
                    break;
                }
            }
        }  
        return ans;
    }
}
