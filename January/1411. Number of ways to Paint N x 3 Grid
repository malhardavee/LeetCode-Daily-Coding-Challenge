class Solution {
    public int numOfWays(int n) {
        long mod = 1_000_000_007;

        // For the first row:
        long same = 6; // patterns like ABA (2 colors same)
        long diff = 6; // patterns like ABC (all different)

        for (int i = 2; i <= n; i++) {
            long newSame = (same * 3 + diff * 2) % mod;
            long newDiff = (same * 2 + diff * 2) % mod;
            same = newSame;
            diff = newDiff;
        }

        return (int) ((same + diff) % mod);
    }
}
